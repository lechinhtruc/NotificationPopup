<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notification Popup</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NotificationPopup.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Notification</a>
            </div>
            <div class="dropdown" id="notify-drop-down">
                <button class="btn btn-info rounded-circle me-2 text-center position-relative" id="btn-notify" style="width:40px;height:40px;" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-bell-fill text-white"></i>
                    <span class="position-absolute top-0 mt-1 translate-middle p-1 bg-primary border border-light border-2 rounded-circle visually-hidden" id="badge-notify" style="right:-5px;">
                        <span class="visually-hidden">Thông báo mới</span>
                    </span>
                </button>

                <div class="dropdown-menu dropdown-menu-end mt-3 me-2 user-select-none overflow-auto" style="width:350px;max-height:500px;" id="notification-menu">
                    <h4 class="px-3">Thông báo</h4>
                    <p class="px-3 text-black-50" style="font-size:13.5px;" id="no-notify-msg">Không có thông báo nào</p>
                    <div id="notify-list"></div>
                </div>
            </div>
            <a class="btn btn-success rounded-circle d-flex align-items-center justify-content-center me-2 fs-4" style="width:40px; height: 40px;" asp-action="CreateNotify" asp-controller="Home"><i class="bi bi-plus text-white"></i></a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - NotificationPopup - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
